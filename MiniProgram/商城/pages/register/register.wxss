.box {
  /* 盒子布局 */
  display: flex;
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  width: 100%;
  /* 一般height:100%无效除非使用定位 */
  height: 100%;
  position: fixed;
  z-index: 999;
}

.window {
  /* height: 50%; */
  width: 50%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
}

.text {
  color: #fff;
  text-align: center;
}

page {
  background: #f2f2f2;
}

.logo image {
  width: 100%;
}

.login image {
  height: 22px;
  width: 22px;
  margin: 20rpx 22rpx;
}

input {
  height: 80rpx;
  line-height: 80rpx;
}

.user, .password, .code {
  background: white;
  display: flex;
  height: 80rpx;
  margin-bottom: 5px;
  border-radius: 4px;
  box-shadow: inset 0 0 6px 1px rgb(145, 253, 226);
}

.login {
  padding: 20px 15px;
}

.placeholder {
  font-size: 13px;
  color: #ccc;
}

.password image {
  height: 19px;
  width: 19px;
  margin: 20rpx 23rpx;
}

.code {
  width: 600rpx;
  position: relative;
}

.code button {
  position: absolute;
  right: 8px;
  top: 5px;
  height: 60rpx;
  width: 100rpx;
  padding: 0;
  margin: 0;
  line-height: 58rpx;
  font-size: 13px;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
}

.register button {
  margin-top: 100rpx;
  width: 90%;
  border-radius: 5px;
  /* background: linear-gradient(to right,#eee,#eee,#eee 100%); */
}
