.content {
  background: #f2f2f2;
  padding: 10rpx;
}

/* 轮播图 */

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  width: 100%;
  height: 400rpx;
}

/* 搜索框 */

.search {
  background: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.searchtext {
  margin-left: 30rpx;
  width: 600rpx;
  margin-right: 50rpx;
}

.hintInfomation {
  font-size: 30rpx;
  color: #b1b3ae;
}

/* 推荐电影、香港电影 */

.container {
  padding: 10rpx;
}

.recomments {
  margin-top: 38rpx;
}

.recomment-flex {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recomment-flex .recomment-two {
  width: 49.3%;
  margin: 5rpx 0;
}

.recommend-text {
  margin: 30rpx 0;
  display: block;
  font-weight: bold;
  font-size: 45rpx;
}

.recomment-flex image {
  width: 100%;
}

.recomment-large {
  font-size: 38rpx;
  font-weight: bold;
}

.recomment-small {
  font-size: 30rpx;
  color: #a5a5a5;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.recomment-flex text {
  display: -webkit-box;
  margin-top: 15rpx;
}
