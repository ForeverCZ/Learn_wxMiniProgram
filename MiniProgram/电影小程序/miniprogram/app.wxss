page, view, image, swiper, swiper-item, navigator, video {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* 推荐电影详情页 */

.video {
  height: 400rpx;
}

.video video {
  width: 100%;
  height: 400rpx;
}

.video-list {
  display: flex;
  justify-content: space-between;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 38rpx;
  margin: 10rpx;
}

.video-tou image {
  width: 29rpx;
  height: 29rpx;
}

.video-tou {
  display: flex;
  align-items: center;
}

.video-forward image {
  width: 50rpx;
  height: 50rpx;
}

.video-forward {
  display: flex;
  justify-content: flex-end;
}

.video-forward view {
  margin: 20rpx;
}

.video-forward button {
  padding: 0;
  border: 0;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 2rpx;
  height: 2rpx;
  color: blueviolet;
}

/* 简介 */

.video-brief {
  margin: 20rpx 0;
}

.video-brief image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
}

.scroll-view-item {
  width: 120rpx;
  display: inline-block;
  text-align: center;
}

.scroll-view-item text {
  font-size: 30rpx;
}

.scroll-top {
  border-top: 5rpx solid white;
  border-bottom: 5rpx solid white;
  padding: 30rpx 0;
}

.duction {
  margin: 10rpx;
}

.duction text {
  font-size: 40rpx;
}

.duction-list {
  padding: 20rpx 0;
}

.duction-list text {
  font-size: 35rpx;
}

/* 精彩留言 */

.message {
  margin: 40rpx 10rpx;
}

.message-text {
  text-align: center;
}

.message image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.message .user {
  height: 80rpx;
  display: flex;
}

.user view {
  margin-right: 6rpx;
  display: flex;
  align-items: center;
}

.user  text {
  font-size: 38rpx;
}

.user-good {
  margin-top: 10rpx;
}

.user-good text {
  font-size: 32rpx;
}

/* 下划线 */

.user-two {
  border-bottom: 3rpx solid #f4f4f4;
  padding-bottom: 30rpx;
}

/* 评论 */

.comment {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 8rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.comment-placeholder {
  font-size: 32rpx;
  color: #ae6873;
}

/* 透明背景 */

.yinying {
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
}

/* 多行输入框 */

.xunfu {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.xunfu textarea {
  width: 100%;
  background: #fff;
  font-size: 35rpx;
  padding: 10rpx 6rpx;
  color: #000;
}

.xunfu button {
  float: right;
  margin-top: 10rpx;
  margin-left: 5rpx;
}

.xunfu button:nth-of-type(1) {
  background: #b52a00;
}

/* 电影故事 */

.story {
  display: flex;
  height: 200rpx;
  overflow: hidden;
  justify-content: space-between;
  border-bottom: 3rpx solid #e8e8e8;
  padding-top: 10rpx;
  padding-left: 5rpx;
}

.story-image {
  width: 100%;
  height: 200rpx;
}

.story-image  image {
  width: 100%;
  display: block;
}

.story-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 2rpx 8rpx 5rpx;
}

.story-movie {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 38rpx;
  font-weight: bold;
}

.story-time {
  font-size: 35rpx;
}
